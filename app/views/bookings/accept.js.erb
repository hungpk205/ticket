<% if @success.present? %>
  toastr['success']('<%= @success %>');
  $('#status-<%= @booking.id %>').text('<%= Booking.human_enum_name(:status, @booking.status) %>');
  $('#action-<%= @booking.id %>').empty();
  $('#action-<%= @booking.id %>').html('<%= link_to t(".confirmed"), "javascript:void(0)", class: "btn btn-primary btn-xs" %>')
<% end %>
